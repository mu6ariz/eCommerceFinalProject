                <select class="form-control" asp-for="OperatingSystem">
                    <option value="Windows 7">Windows 7</option>
                    <option value="Windows 10">Windows 10</option>
                    <option value="iOS 13">ios 13</option>
                    <option value="Android 10">Android 10</option>
                    <option value="Symbian">Symbian</option>
                </select>
                <span asp-validation-for="OperatingSystem" class="text-danger"></span>
            </div>
            <div class="d-none smartphoneAdmin ipadAdmin noteAdmin form-group">
                <label asp-for="CoreCount" class="control-label"></label>
                <select class="form-control" asp-for="CoreCount">
