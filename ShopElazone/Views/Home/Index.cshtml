
@model IEnumerable<Elazone.Models.Products>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">

    <section class="d-block row d-lg-none row slide-bar-mobile">
        <div class="slide-of-menu-mobile">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100"
                             src="/images/ddfbb46c414088e920726617e19ad21ba1c27111_itslider-3.jpg"
                             alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/itslider-1.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/itslider-2.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                   data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                   data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>

    <section class="d-none row d-lg-block row slide-bar">
        <div class="slide-of-menu">
            <div id="carouselExampleControls11" class="carousel slide" data-ride="carousel11">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100"
                             src="/images/ddfbb46c414088e920726617e19ad21ba1c27111_itslider-3.jpg"
                             alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/itslider-1.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/itslider-2.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls11" role="button"
                   data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls11" role="button"
                   data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>

    <div class="wrapper mt-5">
        <div class="row">
            <div class="d-none d-lg-block col-lg-3 col-md-3 col-sm-12 left-side">
                <div class="row">
                    <div class="col-12">
                        <img src="/images/banner0.jpg" alt="">
                    </div>


                    <div class="col-12 mt-4">
                        <div id="carouselExampleControls2" class="carousel slide support-mini-slide"
                             data-ride="carouse2">
                            <div class="carousel-inner">
                                <div class="title_block">
                                    <h3 class="text-center">OUR SERVICES</h3>
                                </div>
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="/images/services/support.png"
                                         alt="First slide">
                                    <h2 class="text-center">24/7 Support</h2>
                                    <p class="text-center">
                                        Got a question? Look no further, Contact or submit
                                        your query here.
                                    </p>
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/images/services/service-support.svg"
                                         alt="First slide">
                                    <h2 class="text-center">100% Trusted service</h2>
                                    <p class="text-center">100% Payment Protection. Easy return policy</p>
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/images/services/service-shipping.svg"
                                         alt="First slide">
                                    <h2 class="text-center">Free Shipping &amp; Return</h2>
                                    <p class="text-center">
                                        Free shipping on all orders over $99, Easy return
                                        policy
                                    </p>
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls2" role="button"
                               data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls2" role="button"
                               data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>



                    <div class="col-12 banner-4 mt-4">
                        <div class="row">
                            <div class="col-12">
                                <img src="/images/banner4.jpg" alt="">
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 right-side">
                <div class="row banners">
                    <div class="col-lg-6 col-sm-12 col-xs-12">
                        <img src="/images/three-banner-1.png" alt="">
                    </div>
                    <div class="col-lg-6 col-sm-12 col-xs-12">
                        <img src="/images/three-banner-2.png" alt="">
                    </div>
                </div>
                <div class="d-block d-lg-none col-12 mt-4">
                    <div id="carouselExampleControls3" class="carousel slide support-mini-slide"
                         data-ride="carouse3">
                        <div class="carousel-inner">
                            <div class="title_block">
                                <h3>SHOP BY CATEGORY</h3>
                                <hr>
                            </div>
                            <div class="carousel-item active">
                                <div class="row">
                                    <div class="col-4">
                                        <img src="/images/shop_by_categories/smartphones.jpg" alt="">
                                    </div>
                                    <div class="col-8">
                                        <header>
                                            <h4>Smartphones</h4>
                                        </header>
                                        <ul>
                                            <li>
                                                <a asp-controller="Smartphones" asp-action="Index">Smartphones</a>
                                            </li>
                                            <li>
                                                <a asp-controller="Smartphones" asp-action="Index">Tablets</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="row">
                                    <div class="col-4">
                                        <img src="~/images/products/lenovo-ip330-15ast-81d600s4ru_1.jpg" alt="">
                                    </div>
                                    <div class="col-8">
                                        <header>
                                            <h4>Computers</h4>
                                        </header>
                                        <ul>
                                            <li>
                                                <a asp-controller="NotebooksAndComputers" asp-action="Index">Notebooks</a>
                                            </li>
                                            <li>
                                                <a href="#">Infinix</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="row">
                                    <div class="col-4">
                                        <img src="/images/shop_by_categories/21_thumb.jpg" alt="">
                                    </div>
                                    <div class="col-8">
                                        <header>
                                            <h4>Headsets</h4>
                                        </header>
                                        <ul>
                                            <li>
                                                <a href="#">Smart Watches</a>
                                            </li>
                                            <li>
                                                <a href="#">Weighing Scale</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls3" role="button"
                           data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls3" role="button"
                           data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class="d-none d-lg-flex row mt-5 shop-by-category">
                    <div class="col-12">
                        <h3>SHOP BY CATEGORY</h3>
                        <hr>
                    </div>

                    <div class="col-lg-4 col-md-4 col-xs-12">
                        <div class="row">
                            <div class="col-4">
                                <img src="/images/shop_by_categories/smartphones.jpg" alt="">
                            </div>
                            <div class="col-8">
                                <header>
                                    <h4>Smartphones</h4>
                                </header>
                                <ul>
                                    <li>
                                        <a asp-controller="Smartphones" asp-action="Index">Smartphones</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Tablets" asp-action="Index">Tablets</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-4 col-xs-12">
                        <div class="row">
                            <div class="col-4">
                                <img src="~/images/products/lenovo-ip330-15ast-81d600s4ru_1.jpg" alt="">
                            </div>
                            <div class="col-8">
                                <header>
                                    <h4>Computers</h4>
                                </header>
                                <ul>
                                    <li>
                                        <a asp-controller="NotebooksAndComputers" asp-action="Index">Notebooks</a>
                                    </li>
                                    <li>
                                        <a asp-controller="NotebooksAndComputers" asp-action="Index">Desktops</a>
                                    </li>
                                </ul>
                            </div>
                        </div>


                    </div>

                </div>
                <div class="row">
                    <div class="col-12">

                        <hr>
                    </div>
                    @{
                        foreach (var item in Model)
                        {
                            <a asp-action="PhoneDetails" asp-controller="Smartphones" asp-route-id="@item.ID">
                            <div class="col-md-3 single-smartphone">
                                <img src="~/images/products/@item.ImageUrl" />
                                <a class="text-center" href="#">@item.Brand&nbsp;@item.Model&nbsp;@item.MemoryInternal GB&nbsp;@item.Color</a>
                                <p class="text-center">@item.Price$</p>
                            </div>
                                </a>
                        }

                    }


                </div>
            </div>
        </div>
    </div>


</div>
