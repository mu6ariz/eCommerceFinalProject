        <span class="p-1 mobile-menu-icon d-lg-none d-block" style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>

        <section class="row pt-3 search-bar">

            <div class="col-md-3">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/demo-store-logo-1566455070.jpg" alt="logo">
                </a>
            </div>

            <div class="col-md-6 mt-1 categories-search">

                <form class="search-bar-input" id="searchbox" method="get" action="#">

                    <input autocomplete="off" name="searchstring" id="searchstring" class="search-input form-control" type="text" placeholder="Search entire store...">

                    <select class="search-categories d-none d-lg-block " id="category" name="category">
                        <option value="Smartphones">Smartphones</option>
                        <option value="Notebooks">Notebooks</option>
                        <option value="Tablets">Tablets</option>
                    </select>
                    <button asp-action="Search" asp-controller="Home" type="submit" name="submit_search" class="btn btn-default button-search">
